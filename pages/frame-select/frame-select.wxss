/* frame-select.wxss */
.scrollarea {
  height: 100vh;
  background: #f5f5f5;
}

.container {
  padding: 40rpx;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.category-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
}

.category-desc {
  font-size: 28rpx;
  color: #999999;
}

.frame-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
}

.frame-item {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.frame-item:active {
  transform: scale(0.96);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}

.frame-preview {
  width: 100%;
  height: 240rpx;
  border-radius: 12rpx;
  background: #f0f0f0;
}

.frame-name {
  text-align: center;
  font-size: 28rpx;
  color: #333333;
  margin-top: 16rpx;
}
