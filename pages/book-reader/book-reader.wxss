/* book-reader.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

.book-swiper {
  flex: 1;
  width: 100%;
}

.page-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  box-sizing: border-box;
}

.page-image {
  width: 100%;
  max-width: 600rpx;
  height: 600rpx;
  border-radius: 16rpx;
  background: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.page-text {
  margin-top: 40rpx;
  font-size: 32rpx;
  color: #333333;
  line-height: 1.8;
  text-align: center;
  padding: 0 40rpx;
  max-width: 600rpx;
}

.control-bar {
  height: 100rpx;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 40rpx;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.control-btn {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  border-radius: 8rpx;
  background: #f5f5f5;
  transition: all 0.3s ease;
}

.control-btn:active {
  background: #e0e0e0;
}

.control-btn[disabled] {
  opacity: 0.5;
}

.control-icon {
  font-size: 48rpx;
  color: #333333;
  font-weight: bold;
}

.control-text {
  font-size: 28rpx;
  color: #333333;
  margin: 0 8rpx;
}

.page-indicator {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666666;
}

.page-current {
  font-weight: bold;
  color: #667eea;
}

.page-separator {
  margin: 0 8rpx;
}

.auto-play-btn {
  position: fixed;
  bottom: 140rpx;
  right: 40rpx;
  background: rgba(102, 126, 234, 0.9);
  color: #ffffff;
  padding: 20rpx 32rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  z-index: 100;
}

.auto-play-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.auto-play-text {
  font-size: 28rpx;
}
