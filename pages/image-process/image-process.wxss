/* pages/image-process/image-process.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.content {
  height: 100vh;
  padding: 40rpx;
}

.upload-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-size {
  font-size: 24rpx;
  color: #999;
}

.upload-box {
  width: 100%;
  min-height: 200rpx;
  border: 4rpx dashed #ddd;
  border-radius: 15rpx;
  background: #f8f9ff;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.avatar-box {
  min-height: 300rpx;
}

.icon-box {
  min-height: 150rpx;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  width: 100%;
}

.upload-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.upload-text {
  font-size: 28rpx;
  color: #667eea;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.upload-hint {
  font-size: 24rpx;
  color: #999;
}

.image-preview {
  position: relative;
  width: 100%;
  height: 100%;
  min-height: 200rpx;
}

.preview-image {
  width: 100%;
  height: 100%;
  min-height: 200rpx;
}

.image-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s;
}

.image-preview:active .image-overlay {
  opacity: 1;
}

.reselect-btn {
  background: rgba(255, 255, 255, 0.9);
  color: #667eea;
  padding: 10rpx 30rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
}

.export-section {
  padding: 40rpx 0;
  margin-top: 20rpx;
}

.export-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 45rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.export-btn[disabled] {
  opacity: 0.6;
}

.export-hint {
  text-align: center;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 20rpx;
}

/* 裁剪模态框 */
.crop-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.crop-modal-content {
  width: 90%;
  max-width: 600rpx;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}

.crop-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.crop-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.crop-close {
  font-size: 40rpx;
  color: #999;
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.crop-body {
  padding: 30rpx;
  min-height: 400rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.crop-preview {
  width: 100%;
  max-height: 500rpx;
  margin-bottom: 20rpx;
}

.crop-hint {
  font-size: 24rpx;
  color: #999;
}

.crop-footer {
  display: flex;
  border-top: 1rpx solid #eee;
}

.crop-cancel,
.crop-confirm {
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
  border: none;
  border-radius: 0;
  font-size: 28rpx;
}

.crop-cancel {
  background: #f5f5f5;
  color: #666;
  border-right: 1rpx solid #eee;
}

.crop-confirm {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}
