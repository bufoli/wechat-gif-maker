/* pages/video-edit/video-edit.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f5f5f5;
}

.preview-section {
  width: 100%;
  flex-shrink: 0;
  background: #000;
  position: relative;
}

.preview-wrapper {
  width: 100%;
  height: 500rpx;
  min-height: 500rpx;
  position: relative;
  overflow: hidden;
  background: #000;
  display: flex;
  align-items: stretch;
  justify-content: space-between;
  padding: 20rpx;
  box-sizing: border-box;
  gap: 20rpx;
}

.preview-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  position: relative;
  background: #1a1a1a;
  border-radius: 8rpx;
  overflow: hidden;
  min-width: 0; /* 确保两个框大小一致 */
  width: 50%; /* 明确设置宽度为50% */
}

.preview-label {
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
  background: rgba(0, 0, 0, 0.5);
  flex-shrink: 0;
}

.preview-content {
  flex: 1;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  min-height: 0; /* 确保内容区域高度一致 */
  width: 100%;
  aspect-ratio: 1 / 1; /* 强制正方形 */
  flex-shrink: 0; /* 防止被压缩 */
}

.preview-video {
  width: 100%;
  height: 100%;
  max-width: 100%;
  max-height: 100%;
  object-fit: contain; /* 保持比例，完整显示 */
}

.preview-image {
  width: 100%;
  height: 100%;
  max-width: 100%;
  max-height: 100%;
  position: relative;
  z-index: 10;
  object-fit: contain; /* 保持比例，完整显示 */
}

.frame-image.color-picking {
  cursor: crosshair;
  opacity: 0.9;
}

/* 颜色选择指示器 */
.color-picker-indicator {
  position: absolute;
  transform: translate(-50%, -50%);
  z-index: 100;
  pointer-events: none;
}

.color-picker-circle {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 0 0 2rpx rgba(0, 0, 0, 0.3), 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
  position: relative;
}

.color-picker-preview {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(255, 255, 255, 0.8);
}

/* 隐藏的Canvas */
.color-picker-canvas {
  position: absolute;
  top: -9999px;
  left: -9999px;
  width: 240px;
  height: 240px;
}

/* 透明背景网格 */
.transparent-grid {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: 
    linear-gradient(45deg, #f0f0f0 25%, transparent 25%),
    linear-gradient(-45deg, #f0f0f0 25%, transparent 25%),
    linear-gradient(45deg, transparent 75%, #f0f0f0 75%),
    linear-gradient(-45deg, transparent 75%, #f0f0f0 75%);
  background-size: 20rpx 20rpx;
  background-position: 0 0, 0 10rpx, 10rpx -10rpx, -10rpx 0px;
  pointer-events: none;
  z-index: 5;
}

.video-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #000;
  color: #fff;
  font-size: 28rpx;
}

/* 控制区域 */
.control-section {
  flex-shrink: 0;
  background: #fff;
  padding: 40rpx 0;
  border-top: 1rpx solid #e5e5e5;
  width: 100%;
  box-sizing: border-box;
}

/* 播放按钮（浮在底部中间） */
.play-btn-overlay {
  position: absolute;
  left: 50%;
  bottom: 30rpx;
  transform: translateX(-50%);
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: rgba(0, 122, 255, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
  z-index: 20;
  backdrop-filter: blur(10rpx);
}

.play-btn-overlay:active {
  transform: scale(0.95);
  background: rgba(0, 122, 255, 1);
}

.play-icon-triangle {
  width: 0;
  height: 0;
  border-left: 24rpx solid #fff;
  border-top: 16rpx solid transparent;
  border-bottom: 16rpx solid transparent;
  margin-left: 6rpx;
}

.play-icon-pause {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
}

.pause-line {
  width: 8rpx;
  height: 28rpx;
  background: #fff;
  border-radius: 2rpx;
}

.play-text {
  font-size: 28rpx;
  color: #333;
}

/* 抠图控制 */
.chroma-control {
  border-top: 1rpx solid #e5e5e5;
  padding: 40rpx;
  width: 100%;
  box-sizing: border-box;
}

.control-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 30rpx;
}

.picker-section {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 30rpx;
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.picker-btn {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  background: #f5f5f5;
  border-radius: 40rpx;
  border: 2rpx solid #e5e5e5;
}

.picker-btn.active {
  background: #D8B4FE;
  border-color: #D8B4FE;
  color: #fff;
}

.picker-icon {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.picker-btn.active .picker-text {
  color: #fff;
}

/* 吸管图标 */
.eyedropper-icon {
  width: 32rpx;
  height: 32rpx;
  position: relative;
}

.eyedropper-icon::before {
  content: '';
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 2rpx;
  height: 20rpx;
  background: currentColor;
  border-radius: 1rpx;
}

.eyedropper-icon::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 16rpx;
  height: 16rpx;
  border: 2rpx solid currentColor;
  border-radius: 50%;
  box-sizing: border-box;
}

.picker-btn.active .eyedropper-icon::before,
.picker-btn.active .eyedropper-icon::after {
  color: #fff;
}

.color-preview {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  border: 2rpx solid #e5e5e5;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 滑杆区域 */
.slider-section {
  margin-top: 30rpx;
  padding: 0 40rpx;
  width: 100%;
  box-sizing: border-box;
}

.slider-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.slider-hint {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #999;
  text-align: center;
}

/* 导出按钮区域 */
.export-section {
  flex-shrink: 0;
  padding: 30rpx 40rpx 40rpx;
  background: #fff;
  border-top: 1rpx solid #e5e5e5;
  width: 100%;
  box-sizing: border-box;
}

.export-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 0;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.export-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.export-hint {
  text-align: center;
}

.export-hint text {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
}
