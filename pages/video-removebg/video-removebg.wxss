/* pages/video-removebg/video-removebg.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f5f5f5;
}

.preview-section {
  flex-shrink: 0;
  background: #000;
  position: relative;
}

.preview-wrapper {
  width: 100%;
  height: 500rpx;
  position: relative;
}

.video-player {
  width: 100%;
  height: 100%;
}

/* 抠图Canvas */
.chroma-canvas {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 10;
}

/* 抠图操作控件 */
.removebg-controls {
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 40rpx;
  background: #fff;
  border-top: 1rpx solid #e5e5e5;
  width: 100%;
  box-sizing: border-box;
}

/* 提取颜色按钮（吸管icon） */
.color-picker-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #e5e5e5;
}

.color-picker-btn.active {
  background: #D8B4FE;
  border-color: #D8B4FE;
}

.eyedropper-icon {
  width: 40rpx;
  height: 40rpx;
  position: relative;
}

.eyedropper-icon::before {
  content: '';
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  border: 3rpx solid #666;
  border-radius: 50%;
  top: 0;
  left: 0;
}

.color-picker-btn.active .eyedropper-icon::before {
  border-color: #fff;
}

.eyedropper-icon::after {
  content: '';
  position: absolute;
  width: 0;
  height: 0;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  border-top: 12rpx solid #666;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
}

.color-picker-btn.active .eyedropper-icon::after {
  border-top-color: #fff;
}

/* 色彩范围滑杆 */
.color-range-slider-wrapper {
  flex: 1;
  margin: 0 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.color-range-slider {
  width: 100%;
}

.color-range-label {
  font-size: 22rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 确认按钮（打钩icon） */
.confirm-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: #D8B4FE;
  display: flex;
  align-items: center;
  justify-content: center;
}

.confirm-btn:active {
  opacity: 0.8;
  transform: scale(0.95);
}

.check-icon {
  width: 40rpx;
  height: 40rpx;
  position: relative;
}

.check-icon::before {
  content: '';
  position: absolute;
  width: 3rpx;
  height: 20rpx;
  background: #fff;
  transform: rotate(45deg);
  left: 12rpx;
  top: 8rpx;
}

.check-icon::after {
  content: '';
  position: absolute;
  width: 3rpx;
  height: 12rpx;
  background: #fff;
  transform: rotate(-45deg);
  left: 12rpx;
  top: 16rpx;
}

/* iOS风格时间轴组件 */
.timeline-section {
  flex-shrink: 0;
  background: #fff;
  padding: 30rpx 20rpx;
  border-top: 1rpx solid #e5e5e5;
  width: 100%;
  box-sizing: border-box;
}

.timeline-container {
  display: flex;
  align-items: center;
  gap: 20rpx;
  width: 100%;
}

.play-btn-wrapper {
  flex-shrink: 0;
}

.play-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: #007AFF;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.3);
}

.play-btn:active {
  transform: scale(0.95);
}

.play-icon-triangle {
  width: 0;
  height: 0;
  border-left: 24rpx solid #fff;
  border-top: 16rpx solid transparent;
  border-bottom: 16rpx solid transparent;
  margin-left: 6rpx;
}

.play-icon-pause {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
}

.pause-line {
  width: 8rpx;
  height: 28rpx;
  background: #fff;
  border-radius: 2rpx;
}

.timeline-wrapper {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  min-width: 0;
}

.timeline-track {
  position: relative;
  height: 60rpx;
  background: #f0f0f0;
  border-radius: 30rpx;
  overflow: hidden;
}

.timeline-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #e5e5e5;
}

.timeline-progress {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  background: #007AFF;
  transition: width 0.1s linear;
}

.timeline-selection {
  position: absolute;
  top: 0;
  bottom: 0;
  background: rgba(0, 122, 255, 0.2);
  border: 2rpx solid #007AFF;
  border-radius: 30rpx;
  z-index: 10;
}

.timeline-handle {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 24rpx;
  height: 60rpx;
  background: #007AFF;
  border-radius: 12rpx;
  z-index: 20;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.timeline-handle-start {
  left: -12rpx;
}

.timeline-handle-end {
  right: -12rpx;
}

.timeline-indicator {
  position: absolute;
  top: 0;
  bottom: 0;
  width: 4rpx;
  background: #fff;
  z-index: 15;
  transform: translateX(-50%);
  box-shadow: 0 0 4rpx rgba(0, 0, 0, 0.3);
}

.timeline-labels {
  display: flex;
  justify-content: space-between;
  padding: 0 10rpx;
}

.time-label {
  font-size: 22rpx;
  color: #999;
}

.action-buttons {
  flex-shrink: 0;
  display: flex;
  gap: 20rpx;
  padding: 40rpx 30rpx;
  background: #fff;
  border-top: 1rpx solid #e5e5e5;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border: none;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.action-btn.cancel {
  background: #f5f5f5;
  color: #666;
}

.action-btn.confirm {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}
