/* pages/video-upload/video-upload.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
}

.tip-box {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.tip-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.tip-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.upload-area {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.upload-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  border: 4rpx dashed #667eea;
  border-radius: 20rpx;
  background: #f8f9ff;
}

.upload-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
}

.upload-text {
  font-size: 32rpx;
  color: #667eea;
  font-weight: bold;
}

.video-preview {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.video-player {
  width: 100%;
  height: 500rpx;
  border-radius: 20rpx;
  background: #000;
  margin-bottom: 30rpx;
}

.video-info {
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin-bottom: 30rpx;
  font-size: 26rpx;
  color: #666;
}

.video-actions {
  display: flex;
  gap: 20rpx;
  width: 100%;
}

.btn-reselect,
.btn-edit {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
}

.btn-reselect {
  background: #f0f0f0;
  color: #666;
}

.btn-edit {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}
