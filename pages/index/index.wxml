<!--index.wxml-->
<scroll-view class="scrollarea" scroll-y type="list">
  <view class="container">
    <view class="top-spacer"></view>
    <view class="content-wrapper">
      <view class="header">
        <view class="app-title">吉祥表情包制作工具</view>
        <view class="subtitle">选择分类，上传照片，制作专属表情包</view>
      </view>

      <!-- 分类列表 -->
      <view class="category-list">
        <view class="category-item" bindtap="selectCategory" data-category="gongxifacai">
          <view class="category-icon">🎉</view>
          <view class="category-name">恭喜发财</view>
          <view class="category-desc">新年祝福，财源广进</view>
        </view>

        <view class="category-item" bindtap="selectCategory" data-category="jixiangruyi">
          <view class="category-icon">✨</view>
          <view class="category-name">吉祥如意</view>
          <view class="category-desc">吉祥祝福，万事如意</view>
        </view>

        <view class="category-item" bindtap="selectCategory" data-category="tongyongzhufu">
          <view class="category-icon">🎊</view>
          <view class="category-name">通用祝福</view>
          <view class="category-desc">通用祝福，适用广泛</view>
        </view>
      </view>
    </view>
    <view class="bottom-spacer"></view>
  </view>
</scroll-view>
