/* index.wxss */
.scrollarea {
  height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.top-spacer {
  height: 60rpx;
}

.content-wrapper {
  flex: 1;
  padding: 0 40rpx;
}

.header {
  text-align: center;
  margin-bottom: 80rpx;
}

.app-title {
  font-size: 56rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.category-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.category-item {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.category-item:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.category-icon {
  font-size: 80rpx;
  margin-right: 30rpx;
}

.category-name {
  flex: 1;
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.category-desc {
  font-size: 24rpx;
  color: #999999;
}

.bottom-spacer {
  height: 60rpx;
}
