/**index.wxss**/
page {
  height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.scrollarea {
  flex: 1;
  overflow-y: auto;
}

.container {
  padding: 0 40rpx;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

/* 顶部空白区域，比例1 */
.top-spacer {
  flex: 1;
}

/* 内容区域（标题+上传框） */
.content-wrapper {
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

/* 底部空白区域，比例1.6 */
.bottom-spacer {
  flex: 1.6;
}

.header {
  text-align: center;
  padding: 0 0 60rpx;
  color: #fff;
}

.app-title {
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 0;
}

.upload-square {
  width: 70%;
  aspect-ratio: 1 / 1;
  background: rgba(255, 255, 255, 0.75);
  border-radius: 24rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.12);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

.upload-square:active {
  transform: scale(0.99);
}

.plus {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.plus-line {
  position: absolute;
  background: #ffffff;
  border-radius: 8rpx;
}

.plus-line-h {
  width: 80rpx;
  height: 12rpx;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.plus-line-v {
  width: 12rpx;
  height: 80rpx;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.upload-hint {
  margin-top: 40rpx;
  text-align: center;
  width: 100%;
}

.upload-hint text {
  font-size: 26rpx;
  color: #ffffff;
  line-height: 1.5;
}

/* 隐藏的Canvas */
.hidden-canvas {
  position: fixed;
  top: -9999px;
  left: -9999px;
  width: 240px;
  height: 240px;
  z-index: -1;
}

/* 隐藏的Video */
.hidden-video {
  position: fixed;
  top: -9999px;
  left: -9999px;
  width: 240px;
  height: 240px;
  z-index: -1;
  opacity: 0;
}
