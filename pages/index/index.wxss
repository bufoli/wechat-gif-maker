/* index.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  position: relative;
  overflow: hidden;
}

.top-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 200rpx;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.1) 0%, transparent 100%);
}

.content {
  padding: 60rpx 40rpx 40rpx;
  position: relative;
  z-index: 1;
}

/* 头部 */
.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.app-title {
  font-size: 64rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 拼音显示区域 */
.pinyin-section {
  margin-bottom: 60rpx;
}

.pinyin-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 32rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
  position: relative;
  overflow: hidden;
}

.pinyin-content {
  position: relative;
  z-index: 2;
}

.pinyin-label {
  font-size: 28rpx;
  color: #999999;
  text-align: center;
  margin-bottom: 30rpx;
}

.pinyin-display {
  font-size: 120rpx;
  font-weight: bold;
  color: #667eea;
  text-align: center;
  margin-bottom: 40rpx;
  line-height: 1.2;
  min-height: 150rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.pinyin-breakdown {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid #e5e5e5;
}

.breakdown-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
}

.breakdown-label {
  color: #666666;
}

.breakdown-value {
  color: #333333;
  font-weight: 500;
}

/* 成功动画遮罩 */
.success-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(102, 126, 234, 0.95);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 10;
  opacity: 0;
  transform: scale(0.8);
  transition: all 0.3s ease;
  pointer-events: none;
}

.success-overlay.show {
  opacity: 1;
  transform: scale(1);
}

.success-icon {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 100rpx;
  color: #667eea;
  margin-bottom: 30rpx;
  animation: successBounce 0.6s ease;
}

.success-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  animation: successFadeIn 0.6s ease 0.2s both;
}

@keyframes successBounce {
  0% {
    transform: scale(0);
  }
  50% {
    transform: scale(1.2);
  }
  100% {
    transform: scale(1);
  }
}

@keyframes successFadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 录音区域 */
.record-section {
  margin-bottom: 40rpx;
}

.record-btn {
  width: 100%;
  height: 160rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.record-btn:active {
  transform: scale(0.98);
}

.record-btn.recording {
  background: rgba(255, 87, 87, 0.95);
  animation: recordingPulse 1.5s ease infinite;
}

@keyframes recordingPulse {
  0%, 100% {
    box-shadow: 0 8rpx 24rpx rgba(255, 87, 87, 0.3);
  }
  50% {
    box-shadow: 0 8rpx 40rpx rgba(255, 87, 87, 0.6);
  }
}

.record-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.mic-icon, .stop-icon {
  display: flex;
  align-items: center;
  justify-content: center;
}

.record-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

.record-btn.recording .record-text {
  color: #ffffff;
}

.record-hint {
  text-align: center;
  margin-top: 20rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.recognition-result {
  margin-top: 20rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  text-align: center;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.95);
}

.result-label {
  color: rgba(255, 255, 255, 0.8);
}

.result-value {
  color: #ffffff;
  font-weight: 500;
  margin-left: 10rpx;
}

/* 操作按钮 */
.action-section {
  margin-top: 40rpx;
}

.action-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 44rpx;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-btn:active {
  background: rgba(255, 255, 255, 0.3);
}

.regenerate-btn {
  background: rgba(255, 255, 255, 0.95);
  color: #667eea;
  border: none;
}

.regenerate-btn:active {
  background: rgba(255, 255, 255, 0.85);
}
